# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

NODE_ENV=production
PORT=3001
FRONTEND_URL=https://babysteps-frontend.vercel.app

# Supabase Configuration
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_production_openai_api_key_here

# Email Configuration
RESEND_API_KEY=your_production_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Security
JWT_SECRET=your_production_jwt_secret_here
ENCRYPTION_KEY=your_production_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX_REQUESTS=20